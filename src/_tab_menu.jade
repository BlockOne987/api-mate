#menu-options.clearfix
  #menu-options-view-type
    div.btn-group(data-toggle="buttons-checkbox")
      button.btn.btn-default.btn-sm#view-type-input(type="button")
        i.glyphicon.glyphicon-check
        | Show full links
  #menu-options-buttons
    button.api-mate-clearall.btn.btn-sm.btn-danger(type='submit') Clear fields

#menu-inputs.panel-group

  //- common fields
  .panel.panel-default
    .panel-heading
      h4.panel-title
        a(data-toggle="collapse", data-parent="#menu-inputs", href="#menu-panel-1") Basic URL parameters
    #menu-panel-1.panel-collapse.collapse.in
      .form-group
        label(for='input-id')
          code meetingID
          = ' and '
          code recordID
        input#input-id.form-control.input-sm(type='text')
      .form-group
        label(for='input-name')
          code name
        input#input-name.form-control.input-sm(type='text')
      .form-group
        label(for='input-attendee-password')
          code attendeePW
        input#input-attendee-password.form-control.input-sm(type='text', value='ap')
      .form-group
        label(for='input-moderator-password')
          code moderatorPW
        input#input-moderator-password.form-control.input-sm(type='text', value='mp')
      .form-group
        label(for='input-fullname')
          code fullName
        input#input-fullname.form-control.input-sm(type='text')
      .form-group
        label(for='input-welcome')
          code welcome
        textarea#input-welcome.form-control.input-sm(rows='3')
          | <br>Welcome to <b>%%CONFNAME%%</b>!
      .form-group
        label(for='input-record')
          code record
        input#input-record.form-control.input-sm(type='checkbox')
      .form-group
        label(for='input-voice-bridge')
          code voiceBridge
        input#input-voice-bridge.form-control.input-sm(type='text')

  //- 'advanced' fields
  .panel.panel-default
    .panel-heading
      h4.panel-title
        a(data-toggle="collapse", data-parent="#menu-inputs", href="#menu-panel-2") Other URL parameters
    #menu-panel-2.panel-collapse.collapse
      .form-group
        label(for='input-dial-number')
          code dialNumber
        input#input-dial-number.form-control.input-sm(type='text')
      .form-group
        label(for='input-web-voice')
          code webVoice
        input#input-web-voice.form-control.input-sm(type='text')
      .form-group
        label(for='input-logout-url')
          code logoutURL
        input#input-logout-url.form-control.input-sm(type='text')
      .form-group
        label(for='input-max-participants')
          code maxParticipants
        input#input-max-participants.form-control.input-sm(type='text')
      .form-group
        label(for='input-duration')
          code duration
        input#input-duration.form-control.input-sm(type='text')
      .form-group
        label(for='input-user-id')
          code userID
        input#input-user-id.form-control.input-sm(type='text')
      .form-group
        label(for='input-create-time')
          code createTime
        input#input-create-time.form-control.input-sm(type='text')
      .form-group
        label(for='input-web-voice-conf')
          code webVoiceConf
        input#input-web-voice-conf.form-control.input-sm(type='text')
      .form-group
        label(for='input-publish')
          code publish
        input#input-publish.form-control.input-sm(type='checkbox')
      .form-group
        label(for='input-redirect-client')
          code redirectClient
        input#input-redirect-client.form-control.input-sm(type='text')
      .form-group
        label(for='input-client-url')
          code clientURL
        input#input-client-url.form-control.input-sm(type='text')
      .form-group
        label(for='input-config-token')
          code configToken
        input#input-config-token.form-control.input-sm(type='text')
      .form-group
        label(for='input-avatar-url')
          code avatarURL
        input#input-avatar-url.form-control.input-sm(type='text')
      .form-group
        label(for='input-meta')
          code meta_*
        .tip attribute=value (one per line, without spaces)
        textarea#input-meta.form-control.input-sm(rows='3', placeholder='myAttribute=1')

  //- post data
  .panel.panel-default
    .panel-heading
      h4.panel-title
        a(data-toggle="collapse", data-parent="#menu-inputs", href="#menu-panel-3") POST Data
    #menu-panel-3.panel-collapse.collapse
      .form-group
        label
          | Pre-upload for
          code create
          | via
          code POST
        .tip Accepts multiple URLs, one per line
        textarea.form-control.input-sm#input-pre-upload-url(rows='3', placeholder='http://my-server/sample.pdf')
      .form-group
        label
          | XML for
          code setConfigXML
          | via
          code POST
        textarea.form-control.input-sm#input-config-xml(rows='3', placeholder='All the content of your config.xml')

  .panel.panel-default
    .panel-heading
      h4.panel-title
        a(data-toggle="collapse", data-parent="#menu-inputs", href="#menu-panel-4") Custom parameters
    #menu-panel-4.panel-collapse.collapse
      .form-group
        label(for='input-custom')
          | Custom parameters:
        .tip attribute=value (one per line, without spaces)
        textarea#input-custom.form-control.input-sm(rows='3', placeholder='myCustomAttribute=Testing')
      .form-group
        .tip One call name per line
        label(for='input-custom')
          | Custom API calls:
        textarea#input-custom-calls.form-control.input-sm(rows='3', placeholder='customApiCall')
